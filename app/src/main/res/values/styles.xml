<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SearchView" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/ic_search_24</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@null</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:listPreferredItemHeightSmall">50dp</item>
    </style>

    <style name="Theme.CollapsingToolbar.Title.Big" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <style name="Theme.CollapsingToolbar.Title.Big2" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    <style name="Theme.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>